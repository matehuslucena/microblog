<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.body %></td>
        <% if current_user.id == comment.user.id %>
          <td class="action-td"><%= link_to 'Destroy', comment, method: :delete, class: "btn btn-primary outline", data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_post_comment_path, class: "btn btn-primary outline" %> <br><br>
<%= link_to 'Back', user_posts_path(current_user), class: "btn btn-primary outline" %>
